<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/fli_poster"/>
    
    <TextView
        android:id="@+id/fli_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fli_poster" />

    <TextView
        android:id="@+id/fli_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fli_title"
        android:layout_toRightOf="@id/fli_poster"/>

    <TextView
        android:id="@+id/fli_bottomtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fli_subtitle"
        android:layout_toRightOf="@id/fli_poster" />

    <TextView
        android:id="@+id/fli_subtitleRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/fli_subtitle"/>

    <TextView
        android:id="@+id/fli_bottomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</merge>